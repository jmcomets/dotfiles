" The "m" at the end of Vi
set nocompatible

let s:bundle_dir = $HOME . '/.vim/bundle'

" Plugins
filetype off
let &runtimepath .= ',' . s:bundle_dir . '/Vundle.vim'
call vundle#begin(s:bundle_dir)

