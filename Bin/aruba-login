#!/bin/sh

# Prompt for login/password
read -p "Login (default=$USER): " login
test $login || login=$USER
stty -echo
read -p "Password: " password
stty echo

wget --no-check-certificate --post-data="auth_user=$login@insa-lyon.fr&auth_pass=$password&accept=Login" \
    -O - 'https://dsi-fence-1.insa-lyon.fr:8001'

# vim: ft=sh et sw=2 sts=2
