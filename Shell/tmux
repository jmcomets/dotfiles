# Basic stuff
set default-shell $SHELL
set default-terminal "screen-256color"
set -s escape-time 0
#setw xterm-keys on

# Free Ctrl-b for Vim, use Ctrl-Space instead
unbind C-b
set prefix C-Space
bind Space send-prefix

# "Space" -> custom command
#bind Space run "tmux-custom-command"

# Navigate somewhat like Vim
setw mode-keys vi
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# More accessible split shortcuts
bind '"' split-window -c "#{pane_current_path}"
bind '%' split-window -h -c "#{pane_current_path}"

# Use Ctrl-[, space, then y to copy to clipboard (xclip required)
#bind -t vi-copy y copy-pipe 'xclip -in -selection clipboard'

# Display active/inactive panes differently
set pane-border-fg blue
set pane-active-border-fg white

# Enable the mouse by default
set mouse on

# Disable the mouse with "M"
bind M \
  set mouse off \;\
  display 'Mouse: OFF'

# Re-enable the mouse with "m"
bind m \
  set mouse on \;\
  display 'Mouse: ON'

# Only display the status bar VPS
set status off
if-shell -b 'test `hostname` = "vps374813.ovh.net"' "set status on"

# Tabs are transparent, current is highlighted
set status-style fg=white,bg=black
setw window-status-current-style fg=black,bg=white

# Show the status at the top, with a simple time indicator
set status-position top
set status-left ''
set status-right '%a %m-%d %H:%M:%S'
set status-interval 1
set status-right-length 60
