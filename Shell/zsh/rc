# Prompt
autoload -U promptinit
promptinit

# Colors
autoload -U colors
colors

# Completion
autoload -U compinit
compinit

# Vi-style
bindkey -v
bindkey '^[[A' up-line-or-search
bindkey '^[[B' down-line-or-search
# also backwards search with <C-r>
bindkey '^R' history-incremental-search-backward
bindkey -v      # vi mode

# History
HISTSIZE=5000
SAVEHIST=1000
HISTFILE=~/.zsh_history

# External modules
call ~/.zsh/colors
call ~/.zsh/completion

# Powerline
call /usr/share/zsh/site-contrib/powerline.zsh && \
  export VIRTUAL_ENV_DISABLE_PROMPT=true

# Git prompt
test -e "$(which ghc)" && GIT_PROMPT_EXECUTABLE="haskell"
source ~/.zsh/git-prompt/zshrc.sh

# vim: ft=zsh et sw=2 sts=2
