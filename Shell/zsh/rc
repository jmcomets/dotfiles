# Prompt
autoload -U promptinit
promptinit

# Colors
autoload -U colors
colors

# Completion
autoload -U compinit
compinit

# Emacs-style
bindkey -e

# History
HISTSIZE=5000
SAVEHIST=1000
HISTFILE=~/.zsh_history

# External modules
call ~/.zsh/colors
call ~/.zsh/completion
call ~/.zsh/keys

# Powerline
call /usr/share/zsh/site-contrib/powerline.zsh && \
  export VIRTUAL_ENV_DISABLE_PROMPT=true

# vim: ft=zsh et sw=2 sts=2
