if [ -x "/usr/bin/dircolors" ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
fi

# root is red, user is blue
if [ "$USER" = "root" ]; then
  color="red"
else
  color="blue"
fi
PS1="%{$fg[$color]%}%n%{$reset_color%}@%U%{$fg[yellow]%}%m%{$reset_color%}%u %B%~%b "
PS2="%{$fg[red]>%} %{$reset_color%}"

