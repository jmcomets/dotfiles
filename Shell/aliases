# Workon alias (similar to virtualenv-wrapper)
BUNDLE_DIR=~/Bundle
VENVS_DIR=~/.venvs
workon()
{
  project_name=$1
  if [ -d "$BUNDLE_DIR/$project_name" ]; then
    if ! [ -d "$VENVS_DIR/$project_name" ]; then
      echo "Virtual environment does not exist: create one with mkvirtualenv"
      return 1
    fi
    cd $BUNDLE_DIR/$project_name
    source $VENVS_DIR/$project_name/bin/activate
  else
    echo "Project does not exist, available ones are: $(command ls -C $VENVS_DIR)"
    return 1
  fi
}
# and mkvirtualenv
mkvirtualenv()
{
  virtualenv $VENVS_DIR/$1
  workon $1
}

