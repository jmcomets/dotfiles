# Security
alias df="df -h"
alias rm="rm -vi"
alias cp="cp -vi"
alias mv="mv -vi"

# Display
alias grep="grep --color=auto"
alias ls="ls -FX --color=auto"
alias tmux="TERM=xterm-256color tmux -2"

# Moving around
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"

# Miscellaneous
alias la="ls -a"
alias ll="ls -lh"
alias l="ls"
alias vi='vim'

# Apt
test -e "$(which apt-get)" && alias sag="sudo apt-get"

# Pacman
test -e "$(which pacman)" && alias pac="sudo pacman"
test -e "$(which yaourt)" && alias yao="yaourt"
test -e "$(which pkgfile)" && alias pkg="pkgfile"

# Quick open
alias x="xdg-open"
alias xx="xdg-open ."

# Python
alias py='python'
alias py2='python2'
alias py3='python3'
alias ipy='ipython'

# Vim croquet
#alias vim='vim -w ~/.vimlog'

# Use hub if it is installed
#test -e "$(which hub)" && alias git="hub"

# Typos
alias got="git"
alias gut="git"
alias ms="ls"
alias sl="ls"
alias dc="cd"
alias vm="mv"

# Don't alias these commands which require urls
alias wget='noglob wget'
alias curl='noglob curl'
alias youtube-dl='noglob youtube-dl'

# Window switching
test -e "$(which wmctrl)" && alias ff='wmctrl -a Firefox'

# Virtualenv
alias a='test -e "venv/bin/activate" && source venv/bin/activate && alias d="deactivate && unalias d"'

# vim: ft=sh et sw=2 sts=2
